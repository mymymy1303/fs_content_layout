								th(scope="col") Vị trí tuyển dụng
								th(scope="col").text-center Số lượng
								th(scope="col") Hạn nộp hồ sơ
						tbody
							tr
								th(scope="row").text-center.order_number 01
								td.position Nhân viên kinh doanh
								td.text-center 01
								td.date 31.10.2018
							tr
								th(scope="row").text-center.order_number 02
